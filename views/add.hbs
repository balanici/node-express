<h1>Добавить курс</h1>
<form action="/add" method="post">
  <div class="input-field">
    <input type="text" id="title" name="title" class="validate" required>
    <label for="title">Название курса</label>
    <span class="helper-text" data-error="Введите название"></span>

  </div>
  <div class="input-field">
    <input type="number" id="price" name="price" class="validate" required min="1">
    <label for="price">Прайс курса</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>
  <div class="input-field">
    <input type="text" id="img" name="img" class="validate" required>
    <label for="img">URL картинки курса</label>
    <span class="helper-text" data-error="Введите URL картинки"></span>

  </div>

  <button class="btn btn-primary">Добавить курс</button>
</form>