<h1>Редактировать курс {{course.title}}</h1>
<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input type="text" id="title" name="title" class="validate" required value="{{course.title}}">
    <label for="title">Название курса</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>
  <div class="input-field">
    <input type="number" id="price" name="price" class="validate" required min="1" value="{{course.price}}">
    <label for="price">Прайс курса</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>
  <div class="input-field">
    <input type="text" id="img" name="img" class="validate" required value="{{course.img}}">
    <label for="img">URL картинки курса</label>
    <span class="helper-text" data-error="Введите URL картинки"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">

  <button class="btn btn-primary">Редактировать курс</button>
</form>